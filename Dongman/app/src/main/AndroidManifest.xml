<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0"
    package="com.example">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19"/>
    <!-- 允许应用程序改变网络状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/> <!-- 允许应用程序改变WIFI连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/> <!-- 允许应用程序访问有关的网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/> <!-- 允许应用程序访问WIFI网卡的网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/> <!-- 允许应用程序完全使用网络 -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/dongman"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".tuijian.TuijianDetailActivity">
        </activity>
        <activity android:name=".tuijian.DongmanTuijianActivity">
        </activity>
        <activity android:name=".dongman.EditDongmanActivity">
        </activity>
        <activity android:name=".manageuser.EditUserActivity">
        </activity>
        <activity android:name=".manageuser.AddUserActivity">
        </activity>
        <activity android:name=".manageuser.UserListActivity">
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".login.RegisterActivity"
            android:label="@string/title_activity_register">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".dongman.ChineseDongmanActivity">
        </activity>
        <activity android:name=".DetailActivity">
        </activity>
        <activity android:name=".ForeignDongmanActivity">
        </activity>
        <activity android:name=".SocketActivity"/>
        <activity android:name=".AddBianjianActivity"/>
        <activity android:name=".BianJianListActivity"/>
        <activity android:name=".dongman.AddChineseDongmanActivity"/>
        <activity android:name=".AddForeignDongmanActivity"/>
    </application>

</manifest>